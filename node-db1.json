{
  "platform": "centos",
  "platform_version": "6.3",
  "error_mail_recipient": "hnakamur@gmail.com",
  "alert_mail_recipient": "hnakamur@gmail.com",
  "ruby": {
    "path": "/usr/local/bin/ruby"
  },
  "mysql": {
    "install_type": "server",
    "version": "5.5",
    "rpm_version": "5.5.25a-1",
    "expire_logs_days": 31
  },
  "nagios": {
    "install_type": "client",
    "version": "3.4.1",
    "plugins_version": "1.4.16",
    "gid": 401,
    "uid": 401,
    "nagcmd_gid": 402
  },
  "nagios_nrpe": {
    "version": "2.13",
    "server_ip": "192.168.11.216",
    "commands": [
      {
        "name": "check_user",
        "line": "/usr/local/nagios/libexec/check_user -w 5 -c 10"
      },
      {
        "name": "check_load",
        "line": "/usr/local/nagios/libexec/check_load -w 12,8,4 -c 24,20,16"
      },
      {
        "name": "check_zombie_procs",
        "line": "/usr/local/nagios/libexec/check_procs -w 5 -c 10 -s Z"
      },
      {
        "name": "check_total_procs",
        "line": "/usr/local/nagios/libexec/check_procs -w 150 -c 200"
      },
      {
        "name": "check_disk",
        "line": "/usr/local/nagios/libexec/check_disk -w 20% -c 10% -p /"
      },
      {
        "name": "check_munin_node_proc",
        "line": "/usr/local/nagios/libexec/check_procs -c 1: -C munin-node"
      },
      {
        "name": "check_mysqld_proc",
        "line": "/usr/local/nagios/libexec/check_procs -c 1: -C mysqld"
      }
    ]
  },
  "glib": {
    "version": "2.32.2"
  },
  "rrdtool": {
    "version": "1.4.7"
  },
  "munin": {
    "version": "2.0.2",
    "gid": 403,
    "uid": 403
  },
  "munin_node": {
    "perlbrew_perl_version": "5.16.0",
    "needs_to_open_port_in_iptables": true,
    "cidr_configs": [
      "cidr_allow 192.168.56.101/32"
    ]
  },
  "run_list": [
    "recipe[ntp]",
    "recipe[mysql]",
    "recipe[nagios]",
    "recipe[nagios_nrpe]"
/*,
    "recipe[glib]",
    "recipe[rrdtool]",
    "recipe[munin_node]"
*/
  ]
}
